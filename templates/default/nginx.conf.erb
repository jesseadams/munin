server {
  
  listen <%= @listen_port %>;
  server_name munin <%= @public_domain %> <%= @fqdn %>;
  access_log <%= File.join(@log_dir, 'nginx_access.log') %>;
  error_log <%= File.join(@log_dir, 'nginx_error.log') %>;

  location /munin {
    root <%= @docroot %>;
  }
  
  location / {
    auth_basic "Munin Server";
    auth_basic_user_file <%= @htpasswd_file %>;
    root <%= @docroot %>;
  }
}
